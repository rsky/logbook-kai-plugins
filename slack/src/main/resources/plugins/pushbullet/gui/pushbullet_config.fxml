<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="300.0" prefWidth="400.0" styleClass="configWindow" stylesheets="@Slack.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plugins.slack.gui.SlackConfigController">
    <VBox spacing="10.0" styleClass="header">
        <BorderPane prefHeight="40.0" prefWidth="400.0">
            <left>
                <Label text="Incoming Webhook Url" BorderPane.alignment="CENTER" />
            </left>
            <center>
                <TextField fx:id="incomingWebhookUrl" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </BorderPane.margin>
                </TextField>
            </center>
            <right>
            </right>
        </BorderPane>
        <BorderPane prefHeight="40.0" prefWidth="400.0">
            <left>
                <Label text="Channel ID (optional)" BorderPane.alignment="CENTER" />
            </left>
            <center>
                <TextField fx:id="channelId" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </BorderPane.margin>
                </TextField>
            </center>
            <right>
                <Button mnemonicParsing="false" onAction="#load" text="更新" BorderPane.alignment="CENTER" />
            </right>
        </BorderPane>
        <CheckBox fx:id="notifyMissionCompleted" text="遠征完了を通知する" />
        <CheckBox fx:id="notifyNdockCompleted" text="入渠完了を通知する" />
        <Button mnemonicParsing="false" onAction="#test" text="テスト送信" />
    </VBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="400.0" spacing="10.0" styleClass="footer">
        <Button mnemonicParsing="false" onAction="#ok" text="OK" />
        <Button mnemonicParsing="false" onAction="#cancel" text="キャンセル" />
    </HBox>
</VBox>
